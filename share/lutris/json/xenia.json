{
    "human_name": "Xenia",
    "description": "Microsoft Xbox 360 emulator",
    "platforms": ["Microsoft Xbox 360"],
    "runner_executable": "xenia/xenia.exe",
    "runnable_alone": true,
    "game_options": [
        {
            "option": "main_file",
            "type": "file",
            "label": "ROM file",
            "help": "The game data, commonly called a ROM image."
        }
    ],
    "runner_options": [
        {
            "option": "disable_vsync",
            "type": "bool",
            "label": "Disable VSync",
            "default": false,
            "argument": "--vsync=false"
        },
        {
            "option": "force_vulkan",
            "type": "bool",
            "label": "Force Vulkan",
            "default": false,
            "argument": "--gpu=vulkan"
        },
        {
            "option": "license_mask",
            "type": "bool",
            "label": "Force license mask to -1",
            "default": true,
            "argument": "--license_mask -1"
        }
    ]
}
